{
    "aggregate": [
        {
            "$match": {
                "processing": 1,
                "orderType": "CNC",
                "primarySupplier": "1133",
                "cbState":"VIC"
            }
        },
        {
            "$group": {
                "_id": "$itemCode",
                "vpn": {
                    "$first": "$vpn"
                },
                "productDesc": {
                    "$first": "$skuDesc"
                },
                "qty": {
                    "$sum": "$qtyOrdered"
                },
                "uom": {
                    "$first": "$uom"
                },
                "unitCostExcGST": {
                    "$first": "$orderBTax"
                },
                "totalValueExcGST": {
                    "$sum": {
                        "$multiply": ["$orderBTax", "$qtyOrdered"]
                    }
                },
                "totalValueIncl": {
                    "$sum": "$extendedValue"
                }
            }
        },
        {
            "$project": {
                "vpn": 1,
                "productDesc": 1,
                "qty": 1,
                "totalValueExcGST": {
                    "$trunc":["$totalValueExcGST", 2]
                },
                "uom": 1,
                "unitCostExcGST": 1,
                "totalValueIncl": {
                    "$trunc": ["$totalValueIncl", 2]
                }
            }
        },
        {
            "$sort": {
                "vpn": 1
            }
        },
        {
            "$facet": {
                "total": [
                    {
                        "$group": {
                            "_id": "Total",
                            "vpn": {"$sum": ""},
                            "productDesc": {"$sum": ""},
                            "totalQty": {"$sum": "$qty"},
                            "uom": {"$sum": ""},
                            "unitCostExcGST": {"$sum": ""},
                            "totalValueExcGST": {"$sum": "$totalValueExcGST"},
                            "totalValueIncl": {"$sum": "$totalValueIncl"}
                        }
                    }
                ],
                "data": [{ "$match": {} }]
            }
        },
        { 
            "$project": {
                "summary": {
                  "$concatArrays": ["$data", "$total"]
                }
             }
        }
    ],
    "collection": "staging",
    "database": "@{parameters('ESL_DB_REPORTING')}"
  }